{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://new-backend-g2gw.onrender.com/api/:path*"
    },
    {
      "source": "/((?!assets/|.*\\.(?:js|css|png|jpg|jpeg|svg|webp|ico|json)).*)",
      "destination": "/index.html"
    }
  ]
}